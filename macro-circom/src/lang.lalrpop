    <s:@L> "return" <value: ParseExpression> ";"<e:@R>
    => build_return(Meta::new(s,e),value),

    <subs: ParseSubstitution> ";"
    => subs,

    <s:@L> <lhe: ParseExpression> "===" <rhe: ParseExpression> ";" <e:@R>
