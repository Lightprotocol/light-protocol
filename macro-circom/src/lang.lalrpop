// Main rule for parsing the Instance struct
pub Instance: Instance = {
    "#[instance]" "{" <def:InstanceFields> "}" => def
};

InstanceFields: Instance = {
    <name:InstanceNameProperty> ","
    <template_constants:TemplateConstantsProperty>
    <public_inputs:PublicInputsProperty>
    => Instance {
            name,
            template_name: None, 
            template_constants,
            public_inputs,
        }
};

InstanceNameProperty: String = {
    <key:IDENTIFIER> ":" <value:IDENTIFIER> => {
        if key == "name" {
            value.to_string()
        } else {
            panic!("Expected 'name', got {}", key)
        }
    }
};
SeparatedCommaNumber: Vec<String> = {
    <head: DECNUMBER> <tail:("," DECNUMBER)*> => {
        let mut vec = vec![head.to_string()];
        vec.extend(tail.into_iter().map(|(_, item)| item.to_string()));
        vec
    }
};
TemplateConstantsProperty: Option<Vec<String>> = {
    "template_constants:" "[" <strings: SeparatedCommaNumber> "]" "," => Some(strings),
    () => None
};
SeparatedCommaString: Vec<String> = {
    <head: IDENTIFIER> <tail:("," IDENTIFIER)*> => {
        let mut vec = vec![head.to_string()];
        vec.extend(tail.into_iter().map(|(_, item)| item.to_string()));
        vec
    }
};
PublicInputsProperty: Vec<String> = {
    "publicInputs:" "[" <inputs: SeparatedCommaString> "]" "," => {
        let mut default_inputs = vec![
            String::from("transactionHash"),
            String::from("publicAppVerifier"),
        ];
        let mut combined = if inputs.is_empty() {
            Vec::<String>::new()
        } else {
            inputs
        };
        default_inputs.append(&mut combined);
        default_inputs
    },
    () => vec![
        String::from("transactionHash"),
        String::from("publicAppVerifier"),
    ]
};

IgnoreEntrypoint: () = {
    r"\s*#\[entrypoint\]\s*" => (),
};

pub CheckUtxoType: Utxo = {
    "inUtxo" <name:IDENTIFIER> <fields: CheckUtxoFields> => {
        instantiate_utxo(true, name, fields)
    },
    "outUtxo" <name:IDENTIFIER> <fields: CheckUtxoFields>  => {
        instantiate_utxo(false, name, fields)
     }
};

CheckUtxoFields: (String, Option<String>, String, Option<UtxoChecks>, Option<Vec<(String, Comparator, String)>>) = {
    "{" "type:" <utxo_type: IDENTIFIER>  "," <enabled: EnabledProperty?> <no_utxos: NumberProperty?> <fields:CheckUtxoCheckFields?> <utxo_data_checks:UtxoDataProperty>   "}" => 
    {
        let no_utxos_out = match no_utxos {
            Some(no_utxos) => no_utxos.to_string(),
            None => String::from("1"),
        };
        (utxo_type, enabled, no_utxos_out, fields, utxo_data_checks)
    }
};

EnabledProperty: String = {
    "enabled:" <instruction: IDENTIFIER> "," => instruction
};

NumberProperty: String = {
    "number:" <no_utxos:SMALL_DECNUMBER> "," => no_utxos.to_string()
};

// <fields:CheckUtxoFields>
// TODO: enable random order by moving struct creation into rust function just get all the keys and values here
CheckUtxoCheckFields: UtxoChecks = {
    "checks:" "{" <fields: UtxoDataField*> "}" ","
    => UtxoChecks::from_data(fields).unwrap()
};

UtxoDataProperty: Option<Vec<(String, Comparator, String)>> = {
    "dataChecks:" "{" <fields:UtxoDataFields> "}" "," => Some(fields),
    () => None
};

UtxoDataFields: Vec<(String, Comparator, String)> = {
    <fields: UtxoDataField*> => fields
};

UtxoDataField: (String, Comparator, String) = {
    <attribute:IDENTIFIER> <comparator:COMPARATOR> <comparison_value:IDENTIFIER> <add: ParseComponentAcc?> "," => (attribute.to_string(), comparator, build_value(comparison_value, add))
};

COMPARATOR: Comparator = {
    "==" => Comparator::Equal,
    "!=" => Comparator::NotEqual,
    ">" => Comparator::GreaterThan,
    "<" => Comparator::LessThan,
    ">=" => Comparator::GreaterEqualThan,
    "<=" => Comparator::LessEqualThan
};

