{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@lightprotocol/tsconfig/base.json",
  "compilerOptions": {
    "target": "ES2022",
    "noEmit": true,
    "module": "ES2022",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
  },
  "include": ["src", "tests"]
}
