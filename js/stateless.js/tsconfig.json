{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "resolveJsonModule": true,
        "importHelpers": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "declaration": false,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": ["ESNext", "DOM"],
        "types": ["vitest/importMeta", "node"],
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*.ts",
        "src/**/*.json",
        "playwright.config.ts",
        "rollup.config.js"
    ]
}
