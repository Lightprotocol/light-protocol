{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "importHelpers": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": ["ESNext"],
        "types": ["vitest/importMeta", "node"],
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*.ts",
        "rollup.config.js",
        "src/get-compressed-token-accounts.ts"
    ]
}
