{
    "name": "@lightprotocol/test-helpers",
    "version": "0.1.0",
    "description": "JavaScript testing utilities for Light",
    "sideEffects": false,
    "main": "dist/cjs/node/index.cjs",
    "type": "module",
    "exports": {
        ".": {
            "require": "./dist/cjs/node/index.cjs",
            "default": "./dist/cjs/node/index.cjs"
        },
        "./browser": {
            "import": "./dist/es/browser/index.js",
            "require": "./dist/cjs/browser/index.cjs"
        }
    },
    "types": "./dist/types/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "test": "pnpm test:unit:all && pnpm test:e2e:all",
        "test-all": "vitest run",
        "test:unit:all": "EXCLUDE_E2E=true vitest run",
        "test-validator": "./../../cli/test_bin/run test-validator",
        "build": "rollup -c",
        "format": "prettier --write .",
        "lint": "eslint ."
    },
    "keywords": [
        "zk",
        "compression",
        "stateless",
        "solana"
    ],
    "maintainers": [
        {
            "name": "Light Protocol Labs Maintainers",
            "email": "friends@lightprotocol.com"
        }
    ],
    "license": "Apache-2.0",
    "peerDependencies": {
        "@lightprotocol/stateless.js": "workspace:*",
        "@solana/web3.js": "^1.91.8"
    },
    "dependencies": {
        "@coral-xyz/anchor": "0.29.0",
        "@lightprotocol/hasher.rs": "workspace:*",
        "@noble/hashes": "^1.3.2",
        "bn.js": "^5.2.1",
        "bs58": "^5.0.0",
        "buffer": "^6.0.3",
        "superstruct": "^1.0.3",
        "tweetnacl": "^1.0.3"
    },
    "devDependencies": {
        "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
        "@playwright/test": "^1.43.1",
        "@rollup/plugin-babel": "^6.0.4",
        "@rollup/plugin-commonjs": "^25.0.7",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-replace": "^5.0.5",
        "@rollup/plugin-typescript": "^11.1.5",
        "@types/bn.js": "^5.1.5",
        "@types/node": "^20.10.2",
        "@typescript-eslint/eslint-plugin": "^6.7.3",
        "eslint": "^8.50.0",
        "eslint-config-standard-with-typescript": "^39.1.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-vitest": "^0.3.26",
        "http-server": "^14.1.1",
        "playwright": "^1.40.1",
        "prettier": "^3.0.3",
        "rimraf": "^5.0.5",
        "rollup": "^4.6.1",
        "rollup-plugin-copy": "^3.5.0",
        "rollup-plugin-dts": "^6.1.0",
        "rollup-plugin-polyfill-node": "^0.13.0",
        "ts-node": "^10.9.1",
        "tslib": "^2.6.2",
        "typescript": "5.3.2",
        "vitest": "^0.34.6"
    }
}
