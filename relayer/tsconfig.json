{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "rootDirs": ["src", "generated"],
    "baseUrl": "src",
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./src/**/*\"", "nukeDB.ts", "setup.jsdom.ts"],
  "exclude": ["node_modules", "./tests/*"],
  "dry": false,
  "debug": false
}
