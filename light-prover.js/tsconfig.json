{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "rootDirs": ["src"],
    "baseUrl": "src",
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,    
    "sourceMap": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/tests/*"],
  "dry": false,
  "debug": false
}